<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Header con degradado glassmorphism y bordes redondeados -->
    <FrameLayout
        android:id="@+id/headerContainer"
        android:layout_width="match_parent"
        android:layout_height="280dp">

        <!-- Fondo con degradado -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_profile_header"/>

        <!-- Overlay glassmorphism sutil -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.05"
            android:background="#FFFFFF"/>

        <!-- Contenido del header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="60dp"
            android:paddingBottom="40dp">

            <!-- Foto de perfil con efecto glassmorphism -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="130dp"
                android:layout_height="130dp"
                app:cardCornerRadius="65dp"
                app:cardElevation="20dp"
                app:strokeWidth="5dp"
                app:strokeColor="#50FFFFFF">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF">

                    <ImageView
                        android:id="@+id/ivProfilePicture"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="32dp"
                        android:src="@android:drawable/ic_menu_myplaces"
                        android:contentDescription="@string/profile_picture"
                        android:scaleType="centerInside"
                        app:tint="@color/purple_500"/>

                </FrameLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </FrameLayout>

    <!-- Contenido scrolleable SIN overlap -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="280dp"
        android:clipToPadding="false"
        android:fillViewport="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="24dp">

            <!-- Progress Bar -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                android:indeterminateTint="@color/purple_500"
                android:visibility="gone"/>

            <!-- Content Layout -->
            <LinearLayout
                android:id="@+id/contentLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Información Personal Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="4dp"
                    app:strokeColor="#15000000"
                    app:strokeWidth="1dp"
                    android:backgroundTint="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/personal_info"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/purple_700"
                            android:letterSpacing="0.02"
                            android:layout_marginBottom="20dp"/>

                        <!-- Nombre -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="18dp"
                            android:gravity="center_vertical">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                app:cardCornerRadius="16dp"
                                app:cardElevation="0dp"
                                android:layout_marginEnd="16dp"
                                android:backgroundTint="#F3E5F5">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:src="@android:drawable/ic_menu_myplaces"
                                    android:contentDescription="@string/name_icon"
                                    app:tint="@color/purple_500"/>

                            </com.google.android.material.card.MaterialCardView>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/full_name"
                                    android:textSize="11sp"
                                    android:textColor="@color/text_secondary"
                                    android:letterSpacing="0.08"
                                    android:textAllCaps="true"
                                    android:alpha="0.7"/>

                                <TextView
                                    android:id="@+id/tvUserName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Cargando..."
                                    android:textSize="17sp"
                                    android:textColor="@color/text_primary"
                                    android:textStyle="bold"
                                    android:layout_marginTop="4dp"/>

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Email -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="18dp"
                            android:gravity="center_vertical">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                app:cardCornerRadius="16dp"
                                app:cardElevation="0dp"
                                android:layout_marginEnd="16dp"
                                android:backgroundTint="#F3E5F5">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:src="@android:drawable/ic_dialog_email"
                                    android:contentDescription="@string/email_icon"
                                    app:tint="@color/purple_500"/>

                            </com.google.android.material.card.MaterialCardView>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/email"
                                    android:textSize="11sp"
                                    android:textColor="@color/text_secondary"
                                    android:letterSpacing="0.08"
                                    android:textAllCaps="true"
                                    android:alpha="0.7"/>

                                <TextView
                                    android:id="@+id/tvUserEmail"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="usuario@ejemplo.com"
                                    android:textSize="16sp"
                                    android:textColor="@color/text_primary"
                                    android:layout_marginTop="4dp"/>

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Teléfono -->
                        <LinearLayout
                            android:id="@+id/phoneLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="18dp"
                            android:gravity="center_vertical"
                            android:visibility="visible">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                app:cardCornerRadius="16dp"
                                app:cardElevation="0dp"
                                android:layout_marginEnd="16dp"
                                android:backgroundTint="#F3E5F5">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:src="@android:drawable/stat_sys_phone_call"
                                    android:contentDescription="@string/phone_icon"
                                    app:tint="@color/purple_500"/>

                            </com.google.android.material.card.MaterialCardView>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/phone"
                                    android:textSize="11sp"
                                    android:textColor="@color/text_secondary"
                                    android:letterSpacing="0.08"
                                    android:textAllCaps="true"
                                    android:alpha="0.7"/>

                                <TextView
                                    android:id="@+id/tvUserPhone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="+56 9 1234 5678"
                                    android:textSize="16sp"
                                    android:textColor="@color/text_primary"
                                    android:layout_marginTop="4dp"/>

                            </LinearLayout>

                        </LinearLayout>

                        <!-- RUT -->
                        <LinearLayout
                            android:id="@+id/rutLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:visibility="visible">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                app:cardCornerRadius="16dp"
                                app:cardElevation="0dp"
                                android:layout_marginEnd="16dp"
                                android:backgroundTint="#F3E5F5">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:src="@android:drawable/ic_menu_info_details"
                                    android:contentDescription="@string/rut_icon"
                                    app:tint="@color/purple_500"/>

                            </com.google.android.material.card.MaterialCardView>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/rut"
                                    android:textSize="11sp"
                                    android:textColor="@color/text_secondary"
                                    android:letterSpacing="0.08"
                                    android:textAllCaps="true"
                                    android:alpha="0.7"/>

                                <TextView
                                    android:id="@+id/tvUserRut"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="12.345.678-9"
                                    android:textSize="16sp"
                                    android:textColor="@color/text_primary"
                                    android:layout_marginTop="4dp"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Rol Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="4dp"
                    app:strokeColor="#15000000"
                    app:strokeWidth="1dp"
                    android:backgroundTint="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="24dp"
                        android:gravity="center_vertical">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp"
                            android:layout_marginEnd="16dp"
                            android:backgroundTint="#F3E5F5">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@android:drawable/ic_menu_manage"
                                android:contentDescription="@string/role_icon"
                                app:tint="@color/purple_500"/>

                        </com.google.android.material.card.MaterialCardView>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/account_type"
                                android:textSize="11sp"
                                android:textColor="@color/text_secondary"
                                android:letterSpacing="0.08"
                                android:textAllCaps="true"
                                android:alpha="0.7"/>

                            <TextView
                                android:id="@+id/tvUserRole"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/user_role"
                                android:textSize="17sp"
                                android:textColor="@color/text_primary"
                                android:textStyle="bold"
                                android:layout_marginTop="4dp"/>

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Dirección Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="4dp"
                    app:strokeColor="#15000000"
                    app:strokeWidth="1dp"
                    android:backgroundTint="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/address"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/purple_700"
                            android:letterSpacing="0.02"
                            android:layout_marginBottom="20dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="top">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                app:cardCornerRadius="16dp"
                                app:cardElevation="0dp"
                                android:layout_marginEnd="16dp"
                                android:backgroundTint="#F3E5F5">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center"
                                    android:src="@android:drawable/ic_dialog_map"
                                    android:contentDescription="@string/address_icon"
                                    app:tint="@color/purple_500"/>

                            </com.google.android.material.card.MaterialCardView>

                            <TextView
                                android:id="@+id/tvUserAddress"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Calle Ejemplo #123\nComuna, Región"
                                android:textSize="16sp"
                                android:textColor="@color/text_primary"
                                android:lineSpacingExtra="6dp"
                                android:layout_marginTop="4dp"/>

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Botones de Acción -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnEditProfile"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:text="@string/edit_profile"
                        android:textSize="16sp"
                        android:letterSpacing="0.02"
                        app:icon="@android:drawable/ic_menu_edit"
                        app:iconGravity="start"
                        app:cornerRadius="18dp"
                        android:layout_marginBottom="12dp"
                        android:elevation="3dp"
                        style="@style/Widget.Material3.Button.TonalButton"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnLogout"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:text="@string/logout"
                        android:textSize="16sp"
                        android:letterSpacing="0.02"
                        app:icon="@android:drawable/ic_lock_power_off"
                        app:iconGravity="start"
                        app:cornerRadius="18dp"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        app:strokeColor="@color/purple_500"
                        app:strokeWidth="2dp"
                        android:textColor="@color/purple_700"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>