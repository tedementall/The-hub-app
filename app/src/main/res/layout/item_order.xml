<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="0dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="@android:color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_glass_card"
        android:padding="16dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivProductImage"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="#F5F5F5"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_receipt"
            android:padding="12dp"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Large"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@id/ivProductImage"
            app:layout_constraintEnd_toStartOf="@+id/tvTotal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tvOrderNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Orden #1024"
                android:textSize="12sp"
                android:fontFamily="@font/google_sans_bold"
                android:textColor="#9C27B0"
                android:letterSpacing="0.05"/>

            <TextView
                android:id="@+id/tvProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                tools:text="CÃ¡mara Sony Alpha..."
                android:fontFamily="@font/google_sans_flex"
                android:textSize="16sp"
                android:textColor="#1A1A1A"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                tools:text="POR CONFIRMAR"

                android:background="@drawable/bg_status_chip"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"

                android:fontFamily="@font/google_sans_bold"
                android:letterSpacing="0.05"
                android:textAllCaps="true"
                android:textColor="#C2185B"
                android:textSize="11sp"

                app:layout_constraintStart_toStartOf="@id/tvOrderNumber"
                app:layout_constraintTop_toBottomOf="@id/tvOrderNumber"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="$299"
            android:textSize="18sp"
            android:fontFamily="@font/google_sans_bold"
            android:textColor="#1A1A1A"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>