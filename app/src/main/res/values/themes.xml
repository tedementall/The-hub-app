<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Thehub" parent="Base.Theme.Thehub" />

    <style name="Base.Theme.Thehub" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">#D65DB1</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">#FFD6F3</item>
        <item name="colorOnPrimaryContainer">#38002C</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogTheme</item>
    </style>


    <color name="splash_background">#FFAFEEEE</color>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/splash_background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/avd_splash_animation</item>
        <item name="postSplashScreenTheme">@style/Theme.Thehub</item>
    </style>


    <style name="BottomSheetDialogTheme" parent="Theme.Material3.DayNight.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Material3.BottomSheet">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:elevation">0dp</item>
    </style>


    <style name="ShapeAppearanceOverlay.App.Card.TopRounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">32dp</item>
        <item name="cornerSizeTopLeft">32dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="ShapeAppearance.Material3.LargeComponent.TopCorners" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

</resources>